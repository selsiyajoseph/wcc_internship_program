{
  "manifest_version": 3,
  "name": "Teams Tab Recorder",
  "version": "1.2",
  "description": "Record the current Microsoft Teams tab.",
  "permissions": [
    "tabs",
    "tabCapture",
    "downloads",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
