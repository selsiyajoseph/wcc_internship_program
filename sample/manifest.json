{
  "manifest_version": 3,
  "name": "Teams Tab Recorder",
  "version": "1.0",
  "description": "Record active Microsoft Teams tab and download the video.",
  "permissions": ["activeTab", "scripting", "tabCapture", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
