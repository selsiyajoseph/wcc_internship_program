{
  "manifest_version": 3,
  "name": "Teams Meeting Recorder",
  "version": "3.0",
  "description": "Detects Teams meetings and records audio/video.",
  "permissions": [
    "notifications",
    "tabCapture",
    "downloads",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "*://teams.live.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.teams.microsoft.com/*",
        "*://teams.live.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icon.png" }
  },
  "icons": { "128": "icon.png" }
}
